<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @installment_schedule.each do |installment| %>
      <tr>
        <td><%= installment[:date].strftime('%d/%m/%Y') %></td>
        <td><%= number_to_currency(installment[:amount]) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', customer_loans_path(@customer) %>
